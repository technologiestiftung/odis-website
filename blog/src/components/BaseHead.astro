---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";

const libsMap = {
  swiper: [
    {
      src: "https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css",
      type: "style",
    },
    {
      src: "https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js",
      type: "script",
      async: true,
      defer: true,
    },
  ],
  tableOfContents: [
    {
      src: "/js/tableOfContents.js",
      type: "script",
      defer: true,
    },
  ],
};
type ExternalLibKey = keyof typeof libsMap;

export interface Props {
  title: string;
  description: string;
  image?: string;
  externalLibs?: ExternalLibKey[];
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description,
  image = "/images/social-media.jpg",
  externalLibs = [],
} = Astro.props;

type LibType = {
  src: string;
  type: "script" | "style";
  async?: boolean;
  defer?: boolean;
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link
  rel="preload"
  href="/fonts/clan-news.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/clan-newsitalic.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/clan-bold.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/clan-boldItalic.woff"
  as="font"
  type="font/woff"
  crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- External Libs -->
{
  externalLibs.map((libKey) => {
    const libs = libsMap[libKey] as LibType[];
    return libs.map((lib) => {
      if (lib.type === "style") {
        return <link rel="stylesheet" href={lib.src} />;
      }
      if (lib.type === "script") {
        return (
          <script
            src={lib.src}
            async={lib.async}
            defer={lib.defer}
            type="text/javascript"
          />
        );
      }
    });
  })
}

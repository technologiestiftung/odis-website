---
import type { CollectionEntry } from "astro:content";
import Heading from "../components/Heading.astro";
import Paragraph from "./Paragraph.astro";
import ProjectMockups from "./ProjectMockups.astro";
import { cn } from "@/utils/classNames";
import { Icon } from "astro-icon/components";

export type Props = CollectionEntry<"projekte">;

const post = Astro.props;
const { title, description } = post.data;
---

<section class="bg-bg-inv text-text-inv pt-16 pb-40 sm:pb-64">
  <div class="grid-container">
    <div class="lg:col-span-6 lg:col-start-2">
      <Paragraph class="flex gap-x-3 flex-wrap">
        <a
          href={`/projekte`}
          class={cn(
            "flex items-bottom gap-1 opacity-70 transition",
            "hover:opacity-100 hover:text-links-active focusable",
            `decoration-clone underline-offset-2 decoration-2`,
            `underline decoration-[transparent]`,
            `hover-hover:hover:text-links-active`,
            `dark:hover:decoration-[var(--links-active)]`,
            `dark:hover-hover:hover:text-text`,
          )}
        >
          <Icon name="ui/arrow-left" size={20} />
          Ãœbersicht
        </a>
      </Paragraph>
      <Heading size="xxl" inverted set:html={title} />
      <Paragraph size="lg" class="text-balance">{description}</Paragraph>
    </div>
  </div>
</section>
<section class="pb-24 -mt-32 sm:-mt-56">
  <ProjectMockups
    {...post.data}
    buttonLink={post.data.blogLink}
    buttonTitle={post.data.blogLinkTitle}
    class="container mx-auto grid grid-cols-12 gap-x-4 sm:gap-x-6 px-4 @sm:px-6 max-w-7xl"
    slug={post.slug}
  />
</section>

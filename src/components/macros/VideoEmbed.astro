---
import ContentSection, {
  type Props as MediaSectionProps,
} from "@/components/macros/MediaSection.astro";
import type { HTMLAttributes } from "astro/types";
import MediaSection from "./MediaSection.astro";

export type Props = MediaSectionProps & {
  url: string;
  iframeProps?: undefined | HTMLAttributes<"iframe">;
};

const {
  url,
  iframeProps = {},
  buttonLink,
  buttonText,
  ...otherProps
} = Astro.props;
---

<MediaSection
  {...otherProps}
  buttonLink={buttonLink || url}
  buttonText={buttonText || "Auf YouTube ansehen"}
>
  <iframe
    class="w-full aspect-video bg-discrete border border-discrete"
    src={url}
    title={otherProps.caption || "Video player"}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    {...iframeProps}></iframe>
</MediaSection>

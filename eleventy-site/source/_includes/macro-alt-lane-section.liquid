<section class="mt-10 relative">
  <div
    class="
      {{ class }}
      bg-bg-alt py-4 sm:py-6
      mb-0 max-w-full sm:w-screen sm:max-w-[100vw]
      sm:ml-[calc((var(--marginSize)+(var(--gridGap)*2)+var(--columnSize))*-1)]
    "
  >
    <div class="grid-container">
      <div class="lg:col-span-6 lg:col-start-2 xl:col-span-5 xl:col-start-2 prose prose-a:focusable py-16 relative">
        {{ content }}
      </div>
    </div>
  </div>
</section>

{% comment %}
  AVAILABLE VARIABLES:
  - tag: The HTML tag to use (optional: defaults to 'h2')
  - text: The text to display (required)
  - size: The size of the text (optional: defaults to 'xl')
    - One of: 'xxl', 'xl', 'lg'
  - inverted: Whether or not the text should be inverted (optional: defaults to false)
  - class: Any additional classes to add to the tag (optional)
  - id: Any additional id to add to the tag (optional)
  - style: Any additional styles to add to the tag (optional)
  - ariaLabel: The aria-label attribute to add to the tag (optional)
  - title: The html title attribute to add to the tag (optional)
{% endcomment %}

{% assign size = size | default: 'xl' %}
{% assign tag = tag | default: 'h2' %}
{% assign inverted = inverted | default: false %}
{% assign class = class | default: '' %}
<{{ tag }}
  class="
    {{ class }}
    font-bold text-balance max-w-prose
    {% if inverted %}
      text-headlines-inv
    {% else %}
      text-headlines
    {% endif %}
    {% if size == 'xxl' %}
      text-3xl lg:text-4xl xl:text-5xl !leading-tight mb-4
    {% elsif size == 'lg' %}
      text-lg lg:text-xl mb-2
    {% else %}
      leading-tight text-xl md:text-2xl lg:text-3xl mb-4
    {% endif %}
  "
  {% if id %}
    id="{{ id }}"
  {% endif %}
  {% if style %}
    style="{{ style }}"
  {% endif %}
  {% if ariaLabel %}
    aria-label="{{ ariaLabel }}"
  {% endif %}
  {% if title %}
    title="{{ title }}"
  {% endif %}
>
  {{ text }}
</{{ tag }}>

{% comment %} 
  AVAILABLE VARIABLES:
  - tag: The HTML tag to use (optional: defaults to 'p')
  - text: The text to display (required)
  - size: The size of the text (optional: defaults to 'base')
    - One of: 'base', 'lg'
  - class: Any additional classes to add to the tag (optional)
  - id: Any additional id to add to the tag (optional)
  - style: Any additional styles to add to the tag (optional)
  - ariaLabel: The aria-label attribute to add to the tag (optional)
{% endcomment %}

{% assign size = size | default: 'xl' %}
{% assign tag = tag | default: 'p' %}
{% assign class = class | default: '' %}
<{{ tag }}
  class="
    {{ class }}
    leading-relaxed max-w-prose
    {% if size == 'lg' %}
      text-xl mb-6
    {% else %}
      text-base mb-4
    {% endif %}
  "
  {% if id %}
    id="{{ id }}"
  {% endif %}
  {% if style %}
    style="{{ style }}"
  {% endif %}
  {% if ariaLabel %}
    aria-label="{{ ariaLabel }}"
  {% endif %}
>
  {{ text }}
</{{ tag }}>

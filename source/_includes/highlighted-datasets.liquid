<section aria-label="Von ODIS für wichtig befundene Datensätze" class="w-full my-12">
  <div class="swiper mb-4 w-full h-full" aria-hidden="true">
    <div class="swiper-wrapper" aria-hidden="true">
      {% for dataset in highlighted_datasets %}
        <div class="swiper-slide">
          <img
            class="w-full h-auto"
            src="{{ dataset.image_path  }}"
            aria-hidden="true">
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="flex flex-wrap gap-y-4">
    <div id="highlighted-datasets" class="w-full">
      {% for dataset in highlighted_datasets %}
        <div data-highlighted-dataset-index="{{ forloop.index }}" class="hidden px-12 relative">
          <h2 class="text-xl font-bold text-blue-500">{{ dataset.title }}</h2>
          <div class="absolute -top-12 left-1/2 -translate-x-1/2 text-center w-full px-12 text-sm">
            {% if dataset.url %}
              <a href="{{ dataset.url  }}" class="font-bold text-blue-500 uppercase tracking-wider">Zum Datensatz</a>
            {% else %}
              <p class="text-red-500 font-bold uppercase tracking-wider">Datensatz geschlossen</p>
            {% endif %}
          </div>
          <p class="my-2">{{ dataset.description }}</p>
          {% if dataset.example_usage %}
            <a href="{{ dataset.example_usage  }}" class="underline">Beispiel-Anwendung</a>
          {% endif %}
          {% unless dataset.url %}
            <a href="/journey" class="underline">Wie ODIS Daten öffnet</a>
          {% endunless %}
        </div>
      {% endfor %}
    </div>
    <div class="w-full px-6 flex justify-between order-first">
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script src="/assets/js/slider.js"></script>
</section>
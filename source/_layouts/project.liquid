---
layout: default
---
{% comment %}
  AVAILABLE VARIABLES
  -------------------
    tags: Project tags
    title: Project title
    blogLinkTitle: Title of blog post link
    blogLink: Link to blog post
    metaDescription: Project meta description
    date: Date of project
    indexImage: Path to index image
    heroImage: Path to hero image
    mobileImage: Path to mobile image
    content: Project content
    projectUrlWithoutProtocol: Project URL without protocol (https://)
    finishDate: Project finish date
{% endcomment %}

{% render 'project-header',
  title: title,
  buttonTitle: blogLinkTitle,
  buttonLink: blogLink,
  description: metaDescription,
  mobileImage: mobileImage,
  heroImage: heroImage,
  projectUrlWithoutProtocol: projectUrlWithoutProtocol
%}

<section class="pb-64">
  <div class="container max-w-6xl mx-auto grid xl:grid-cols-12 px-4 sm:px-6">
    <div class="xl:col-start-1 xl:col-span-6 prose">
      {{ content }}
    </div>
    <aside class="xl:col-start-9 xl:col-span-4 py-4 flex flex-col gap-6">
      <dl>
        <dt class="headline-lg">Jahr</dt>
        <dd class="mb-6">{{ date | date: '%Y' }}</dd>

        <dt class="headline-lg">Projektschluss</dt>
        <dd class="mb-6">
          {% if finishDate < now %}
            Abgeschlossen
          {% else %}
            {{ finishDate | date: '%d.%m.%Y' }} (geplant)
          {% endif %}
        </dd>
      </dl>
    </aside>
  </div>
</section>

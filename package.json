{
  "name": "@technologiestiftung/odis-website",
  "version": "2.0.0",
  "description": "Repository for the website of Berlins Open Data Informationsstelle (ODIS).",
  "scripts": {
    "start": "eleventy --serve --quiet",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:css && eleventy",
    "css": "npx tailwindcss -i ./source/assets/css/tailwind.css -o ./_site/assets/css/tailwind.css",
    "build:css": "npm run css -- --minify",
    "dev:css": "npm run css -- --watch",
    "predev": "npm run build",
    "dev": "npm-run-all -p dev:css dev:eleventy ",
    "dev:eleventy": "eleventy --serve --quiet --watch",
    "prettier": "prettier . --check --ignore-path .lintignore",
    "prettier:fix": "prettier . --write --ignore-path .lintignore",
    "eslint": "eslint . --ignore-path .lintignore",
    "eslint:fix": "eslint . --fix --ignore-path .lintignore",
    "lint": "run-s prettier eslint",
    "lint:fix": "run-s prettier:fix eslint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/technologiestiftung/odis-website.git"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "ff6347",
      "email": "hash@ff6347.email"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/technologiestiftung/odis-website/issues"
  },
  "homepage": "https://github.com/technologiestiftung/odis-website#readme",
  "devDependencies": {
    "@11ty/eleventy": "2.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.0.0",
    "@shopify/prettier-plugin-liquid": "1.2.2",
    "@tailwindcss/container-queries": "0.1.1",
    "@tailwindcss/typography": "0.5.9",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "0.5.3",
    "tailwindcss": "3.2.4",
    "tailwindcss-touch": "1.0.1"
  }
}
